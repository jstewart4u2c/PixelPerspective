@page "{displayName}"
@model PixelPerspective.Pages.FriendsListModel
@{
}

<h3 class="text-center">@Model.user.DisplayName Friends List</h3>

@foreach (var user in @Model.users)
{
<div class="col-md-12">
    <div class="row">
        <div class="profile-image d-flex flex-column align-items-center">
            <img src="~/ProfileImages/@(string.IsNullOrEmpty(user.ProfileImagePath) ? "defaultprofile.jpg" : user.ProfileImagePath)"
                 alt="Profile Image"
                 width="50"
                 height="50"
                 object-fit="contain"
                 class="rounded-circle" />


                 <p>@user.DisplayName</p>
        </div>
    </div>
</div>
}